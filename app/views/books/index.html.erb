<div class="body">
	<div class="container">
		<div class="row">
		<% if flash[:notice] %>
		<%= flash[:notice] %>
		<% end %>
			<div class="col-lg-3">
			<%= render 'books/list', book: @book, user: current_user %>
			</div>
			<div class="col-lg-9">
				<h2>Books</h2>
				<table class="table table-striped">
					<thead>
						<tr>
							<th>Tittle</th>
							<th>Opinion</th>
						</tr>
					</thead>
					<tbody>
					<% @books.each do |book| %>
						<tr>
							<td><%= attachment_image_tag book.user, :profile_image, :fill, 100, 100, format: 'jpeg', fallback: "no_image.jpg" %></td>
							<td><%= link_to book.title, book_path(book.id) %></td>
							<td><%= book.body %></td>
						</tr>
					<% end %>
					</tbody>
				</table>
			</div>
		</div>
	</div>
</div>