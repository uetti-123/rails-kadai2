<div class="body">
	<div class="container">
		<% if flash[:notice] %>
		<%= flash[:notice] %>
		<% end %>
		<div class="row">
			<div class="col-lg-3">
			<%= render 'books/list', book: @book, user: @user %>
			</div>
			<div class="col-lg-9">
				<h2>Books</h2>
				<table class="table table-striped">
					<thead>
						<tr>
							<th>Tittle</th>
							<th>Opinion</th>
						</tr>
					</thead>
					<tbody>
					<% @user.books.each do |book| %>
						<tr>
							<td><%= link_to book.title, book_path(book.id) %></td>
							<td><%= book.body %></td>
							<td><%= link_to "Edit", edit_book_path(book.id), class: "btn btn-success" %></td>
							<td><%= link_to "Destroy", books_path, class: "btn btn-danger", method: :delete, "data-confirm" => "本当に消しますか?" %>
						</tr>
					<% end %>
					</tbody>
				</table>
			</div>
		</div>
	</div>
</div>