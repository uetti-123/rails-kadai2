<div class="body">
	<div class="container">
		<div class="row">
			<div class="col-lg-3">
			<%= render 'books/list', book: @book, user: current_user %>
			</div>
			<div class="col-lg-9">
				<h2>Users</h2>
				<table class="table table-striped">
					<thead>
						<th>image</th>
						<th>name</th>
					</thead>
					<% @users.each do |user| %>
					<tbody>
						<td><%= attachment_image_tag user, :profile_image, :fill, 100, 100, format: 'jpeg', fallback: "no_image.jpg" %></td>
						<td><%= user.name %></td>
						<td><%= link_to "Show", user_path(user.id) %></td>
					</tbody>
					<% end %>
				</table>
			</div>
		</div>
	</div>
</div>