<h2>User info</h2>
<% if flash[:notice] %>
<%= flash[:notice] %>
<% end %>
	<%= form_for(@user) do |f| %>
<label for="user_name">Name</label>
	<%= f.text_field :name %>
<label for="image">Image</label>
	<%= f.attachment_field :profile_image %>
<label for="introduction">Introduction</label>
	<%= f.text_field :introduction %>
	<%= f.submit 'Update User' %>
	<% end %>